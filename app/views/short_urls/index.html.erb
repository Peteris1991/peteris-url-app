<p id="notice"><%= notice %></p>
<div class="jumbotron text-center">
  <h1 class="display-5">Short Url List</h1>
  <p class="lead">Copy and paste your link and magic will appear</p>
  <hr class="my-4">
  <p>Create and save your favorit links up to 100!!!</p>
  <div class='container'>
    <%= render 'short_urls/form' %>
  </div>
  <hr class="my-4">
</div>
<div class="container">
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Short url</th>
      <th>Original url</th>
      <th colspan="3">Option</th>
    </tr>
  </thead>

  <tbody>
    <% @short_urls.each do |short_url| %>
      <tr>
        <td><a href='<%= short_url.original_url %>' target='blank'><%= root_url %><%= short_url.mini_url %></a></td>
        <td><a href='<%= short_url.original_url %>' target='blank'><%= short_url.original_url %></a></td>
        <td><%= link_to 'Destroy', short_url, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
